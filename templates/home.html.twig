{# Utilisation du squelette "base.html.twig" pour le front-office #}
{% extends 'base.html.twig' %}

{# Définition du titre de la page #}
{% block title %}GLGC{% endblock %}

{# Remplissage du body de la page #}
{% block body %}

    {# Hero #}
    <div class="relative aspect-[3/1]">
        <img src="{{ asset('images/Com&Cie_HD-55.jpg') }}" class="h-full w-full object-contain object-right" alt="Groupe GLGC">

        <div class="absolute inset-0 hero-gradient"></div>

            <div class="absolute inset-0 bg-gradient-to-r from-blue-200/70 to-blue-700/70 w-3/4 sm:w-full"></div>


        <div class="absolute inset-0 flex flex-col justify-center items-center">
            <img class="my-auto" src="{{ asset('images/Group-glgc.svg') }}" alt="Logo GLGC">

            <div class="space-y-4 pb-4">
                <p class="text-center uppercase">Groupe de communication</p>


                <a class="flex justify-center items-center h-8 w-8 mx-auto border border-black rounded-full animate-bounce" href="#bazinga">
                    <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                    </svg>
                </a>

            </div>
        </div>

    </div>

    {# Intro #}
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="max-w-prose mx-auto py-16">
            <p class="text-gray-500">Découvrez l'art du numérique et de la créativité tangible ! Avec notre expertise en stratégies digitales percutantes, en impressions et signalétiques de qualité, ainsi qu'en design d'agencement et décoration d'espaces, nous transformons vos idées en réalité visuelle captivante. Que ce soit sur le web ou dans votre environnement physique, nous sommes là pour vous aider à marquer votre présence avec style et efficacité.</p>
        </div>
    </div>


        {% for item in enseigneEdit_form %}
            {% set colorItem = "from-yellow-500/70" %}
            {% if item.color == "red" %}
            {% set colorItem = "from-red-500/70" %}
            {% elseif item.color == "green" %}
                {% set colorItem = "from-green-500/70" %}
            {% endif %}

            {% if loop.index is odd %}
                {#  if loop.index == is odd   is odd = nombre impair  #}

            {# Img/Text Com&Cie#}
            <section class="relative max-w-7xl mx-auto px-6 py-6 lg:px-8">
                <div class="relative z-10 grid gap-8 md:grid-cols-2 md:items-center lg:gap-12">
                    <div class="relative aspect-square h-full w-full object-cover bg-gray-400">

                        <img class="h-full w-full object-cover" src="{{ asset('/images/profils/' ~ item.image) }}" alt="Image du groupe GLGC">

                        <div class="absolute inset-0 flex justify-center">
                            <div class="w-full max-w-[70%] bg-gradient-to-r {{ colorItem }} "></div>:
                        </div>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <img src="{{ asset('/images/logo/' ~ item.imageLogo ) }}" alt="Logo" class="w-1/3">
                        </div>
                    </div>

                    <div class="space-y-6">

                        <div data-aos="fade-up"
                             data-aos-anchorplacement="bottom-bottom">
                            <h2 class="text-2xl uppercase">{{ item.title }}</h2> <br>
                            <div class="text-gray-500">{{ item.content|raw }}</div>
                            {# Le filtre |raw est nécessaire pour échapper les caractères spéciaux mais aussi pour les balises html #}
                        </div>

                        <p>
                            <a class="inline-flex gap-1 items-center" href="{{ item.imageUrl }}">
                                {{ item.subtitle }}
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                                    <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                </svg>

                            </a>

                        </p>

                    </div>

                </div>

                {#    <!-- Image décorative positionnée au milieu et à cheval entre les deux sections -->#}
{#                <div class="absolute inset-0 translate-y-1/2">#}
{#                    <img src="{{ asset('images/decoration2group.png') }}" alt="" class="h-full w-full object-cover">#}
{#                </div>#}
            </section>

            {% elseif loop.index is even %}
                {#  if loop.index is even   is even = nombre paire #}


                {# Img/Text Quadripub#}
                <section class="max-w-7xl mx-auto px-6 py-6 lg:px-8">
                    <div class="relative z-10 grid gap-8 md:grid-cols-2 md:items-center lg:gap-12">

                        <div class="space-y-6 md:flex-row-reverse">
                            <div data-aos="fade-up" data-aos-anchorplacement="bottom-bottom">
                                <h2 class="text-2xl uppercase">{{ item.title }}</h2> <br>
                                <div class="text-gray-500">{{ item.content|raw }}</div>
                            </div>
                            <p>
                                <a class="inline-flex gap-1 items-center" href="{{ item.imageUrl }}">
                                    {{ item.subtitle }}
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            </p>
                        </div>

                        <div class="relative aspect-square h-full w-full object-cover bg-gray-400">
                            <img class="h-full w-full object-cover" src="{{ asset('/images/profils/' ~ item.image) }}" alt="Image de fond">
                            <div class="absolute inset-0 flex justify-center">
                                <div class="w-full max-w-[70%] bg-gradient-to-r {{ colorItem }} "></div>
                            </div>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <img src="{{ asset('/images/logo/' ~ item.imageLogo ) }}" alt="Logo" class="w-1/3">
                            </div>
                        </div>
                    </div>
                </section>

            {% endif %}


            {% if loop.index == 2 %}

                {# Système de galerie d'image #}
                <section class="flex justify-center items-center">
                    <div class="flex space-x-4 my-3">

                        <div id="galeries" class="flex">

                            <div class="galerie mr-4" data-open="img1max.png">
                                <img class="shadow w-33 h-33 object-cover" src="{{ asset('images/galeries/miniatures/img1min.png') }}" alt="Galerie image 1">
                            </div>

                            <div class="galerie mr-4" data-open="img2max.png">
                                <img class="shadow w-33 h-33 object-cover" src="{{ asset('images/galeries/miniatures/img2min.png') }}" alt="Galerie image 2">
                            </div>

                            <div class="galerie mr-4" data-open="img3max.png">
                                <img class="shadow w-33 h-33 object-cover" src="{{ asset('images/galeries/miniatures/img3min.png') }}" alt="Galerie image 3">
                            </div>
                        </div>
                    </div>
                </section>


                {# Section Bannière Téméraires #}
                <section class="relative">
                    <div class="relative aspect-[3/1]">
                        <img src="{{ asset('images/temerairesjpg.jpg') }}" alt="Image groupe GLGC" class="w-full h-full object-cover">

                        <div class="absolute inset-0 flex flex-col items-center justify-center">
                            <img src="{{ asset('images/temeraires.png') }}" alt="Logo Téméraires" class="">

                            <a class="mt-6 inline-flex gap-1.5 items-center whitespace-nowrap" href="#">
                                Vêtements Bourguignons
                                <img src="{{ asset('images/Frame3.png') }}" alt="" class="w-1/4">
                            </a>
                        </div>
                    </div>

                </section>

            {% endif %}

        {% endfor %}

    {#    <!-- Image décorative positionnée au milieu et à cheval entre les deux sections -->#}
{#    <div class="absolute translate-y-1/2">#}
{#        <img src="{{ asset('images/decoration2group.png') }}" alt="" class="h-full w-full object-cover">#}
{#    </div>#}


    {# Footer #}
    <footer class="bg-blue-500 py-4" id="bazinga">
        <div class="container mx-auto px-4 flex flex-col items-center lg:flex-row lg:justify-between">
            <a href="https://fr.linkedin.com/company/cometcie" class="text-blue-700 font-bold lg:ml-4">
                <img src="{{ asset('images/367593_linkedin_business_network_social_icon.svg') }}" alt="Logo Linkedin" class="w-6 h-6">
            </a>

            <div class="text-gray-700 text-sm lg:ml-4">
                <a href="{{ path('legal_notice') }}">Mentions légales</a>
            </div>
        </div>
    </footer>

{% endblock %}

{% block js %}
    <script src="{{ asset('js/script.js') }}" ></script>
{% endblock %}
