{# Si il y a des messages flashes de type "success" ou "error" #}
{% if app.session.flashBag.has('success') or app.session.flashBag.has('error') %}

    <div class="container mx-auto">

        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">

            {# Affichage des messages flashes de type "success" #}
            {% for message in app.flashes('success') %}

                <div class="bg-green-500 text-white px-4 py-3 rounded-lg shadow-md">
                    {{ message }}
                    <button type="button" class="float-right text-white" data-bs-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            {% endfor %}

            {# Affichage des messages flashes de type "error" #}
            {% for message in app.flashes('error') %}

                <div class="bg-red-500 text-white px-4 py-3 rounded-lg shadow-md">
                    {{ message }}
                    <button type="button" class="float-right text-white" data-bs-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            {% endfor %}

        </div>

    </div>

{% endif %}
